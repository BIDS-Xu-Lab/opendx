# Multi-stage build for OpenDX Web frontend
# Stage 1: Builder - build the Vue application
FROM node:20-alpine as builder

# Set working directory
WORKDIR /app

# Copy package files from web directory
COPY web/package.json web/package-lock.json ./

# Install dependencies using clean install for reproducible builds
RUN npm ci

# Copy .env file (user-provided, contains VITE_* variables)
# Note: Make sure .env exists in the web/ directory before building
# VITE_* variables are baked into the bundle at build time
COPY web/.env .env

# Copy application source code from web directory
# node_modules and other files are excluded via .dockerignore
COPY web/ .

# Build the application for production
RUN npm run build

# Stage 2: Runtime - serve with nginx
FROM nginx:alpine

# Remove default nginx index page
RUN rm -rf /usr/share/nginx/html/*

# Copy built application from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy custom nginx configuration for SPA routing from conf/prod
COPY conf/prod/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Start nginx in foreground
CMD ["nginx", "-g", "daemon off;"]
